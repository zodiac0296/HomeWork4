<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/name_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Name"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold|italic"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/short_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Short Description"
        android:layout_margin="5dp"
        android:textColor="#9A9A9A"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/detailed_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        tools:text="Detailed Description"
        android:textColor="#9A9A9A"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/user_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        tools:text="User Notes"
        android:textColor="#9A9A9A"
        android:textSize="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/start_event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="00:00:0000"
            android:textColor="#3DCC00"
            android:layout_weight="1"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/end_event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="00:00:0000"
            android:textColor="#E80000"
            android:layout_weight="1"
            android:gravity="center"
            />

    </LinearLayout>

</LinearLayout>